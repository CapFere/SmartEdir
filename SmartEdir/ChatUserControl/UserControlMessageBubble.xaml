<UserControl x:Class="SmartEdir.ChatUserControl.UserControlMessageBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartEdir.ChatUserControl"
             mc:Ignorable="d" 
             Width="auto" Height="auto">
    <StackPanel Name="StackPanelMessage" Orientation="Horizontal" Margin="0 20 0 0" HorizontalAlignment="Right">
        <Grid>
            <Rectangle Name="RectangleMessage" Margin="30 0 0 0" Fill="#039be5" StrokeThickness="0" RadiusX="7" RadiusY="7" Width="auto" Height="auto"/>
            <TextBlock Name="Message" Padding="9.5 7.5" MaxWidth="210" Margin="30 0 0 0" VerticalAlignment="Center" Text="Hey u, tefash eko beselam new man enedewawel" HorizontalAlignment="Center" Foreground="White" FontSize="16" TextWrapping="Wrap"/>
        </Grid>
    </StackPanel>
</UserControl>
